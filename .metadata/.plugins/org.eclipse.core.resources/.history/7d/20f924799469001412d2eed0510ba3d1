package metro;

public class Megoldo {
	
		public void megalloszam(){
			
			int x = MetroReader.allomasok.length;
			int y = MetroReader.allomasok[0].length;
			int[] szamtomb = new int[x*y];
			int osszeg = 0;			
			
			for(String[] megallok : MetroReader.allomasok){
				for(String megallo: megallok){
					if(megallo ==MetroReader.allomasok[0][0]) System.out.println(MetroReader.allomasok[0][0]);
				}
			}
			
			
			
			System.out.printf("%d\n",osszeg);
		}
		
		public void leghosszabbVonalak(){
			int metroLeghosszabb = 0;
			int villamosLeghosszabb = 0;
			for(int i=0;i<MetroReader.metro;i++)
			{
				for(String s: MetroReader.allomasok[i]){
				metroLeghosszabb+=1;
				}
			}
			for(int i = MetroReader.metro; i<(MetroReader.metro+MetroReader.villamos);i++)
			{
				villamosLeghosszabb+=1;
			}
			System.out.printf("%d %d\n", metroLeghosszabb,villamosLeghosszabb);
		}
