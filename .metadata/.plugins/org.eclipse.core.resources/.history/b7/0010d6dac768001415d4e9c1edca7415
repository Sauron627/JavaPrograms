package metro;

public class Megoldo {
	
		public void megalloszam(){
			
			int x = MetroReader.allomasok.length;
			int y = MetroReader.allomasok[0].length;
			int[] szamtomb = new int[x*y];
			int osszeg = 0;
			int n=0;
			
			
			for(int i=0; i<x;i++){
				for(int j=0;j<y;j++){
						
					for(int k=i; k<x;k++){
						for(int l=j;l<y;l++){							
							
							if( MetroReader.allomasok[i][j]== MetroReader.allomasok[k][l]){
								
								szamtomb[n]+=1;	
							}
						}
					}
					
					++n;
				}
			}
			for(int i=0; i<(x*y);i++){
				if(szamtomb[i]!=0) osszeg+=1; 
			}
			
			
			
			System.out.printf("%d\n",osszeg);
		}
		
		public void leghosszabbVonalak(){
			int metroLeghosszabb = 0;
			int villamosLeghosszabb = 0;
			for(int i = 0; i<MetroReader.allomasok[0].length;i++)
			{
				metroLeghosszabb+=1;
			}
			for(int i = 0; i<MetroReader.allomasok[1].length;i++)
			{
				villamosLeghosszabb+=1;
			}
			System.out.printf("%d %d\n", metroLeghosszabb,villamosLeghosszabb);
		}
		public void csakMetroval(){
			
		}
		public Megoldo(){
			;
			
		}
}
