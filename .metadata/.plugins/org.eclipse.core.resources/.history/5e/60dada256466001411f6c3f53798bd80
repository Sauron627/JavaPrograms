package metro;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;

public class MetroReader {

	private static String[][] allomasok;

	public static void read(String FilePath) throws IOException {
    	
    	
        BufferedReader inputStream = null;

        try {
            inputStream = new BufferedReader(new FileReader(FilePath));
           

            String beSzoveg;
            String[] Szoveg;
            allomasok = null;
            beSzoveg = inputStream.readLine();
            Szoveg = beSzoveg.split(" ");
            int metro = Integer.parseInt(Szoveg[0]);
            int villamos = Integer.parseInt(Szoveg[1]);
            int vonalak = metro+villamos;
            int megallo;
            
            for(int i=0; i<metro;i++){
            	megallo = (inputStream.read()-48);
            	inputStream.read();
            	beSzoveg = inputStream.readLine();
            	allomasok[metro] = beSzoveg.split(", ");
            	for(int j =0;j<megallo;j++){
            	System.out.printf("%s ",allomasok[0][j]);
            	}
            	System.out.println();
            }
            
            
               
        } finally {
            if (inputStream != null) {
                inputStream.close();
            }
        }
        
}
}
